<h1 class="title">Sign Up</h1>
  
<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <div class="field">
    <%= f.label :name , class: 'label is-small' %>
    <%= f.text_field :name, class: 'input'%>
  </div>

  <div class="field">
    <%= f.label :email, class: 'label is-small' %>
    <%= f.email_field :email, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'label is-small' %>
    <%= f.password_field :password, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmation", class: 'label is-small' %>
    <%= f.password_field :password_confirmation, class: 'input' %>
  </div>

  <%= f.submit "Create my account", class: 'button' %>
<% end %>


